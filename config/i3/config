set $mode_display Ext Screen (v) LVDS ON, (h) HDMI ON, (x) LVDS OFF, (y) HDMI OFF
mode "$mode_display" {
    bindsym v exec --no-startup-id xrandr --output LVDS1 --auto --left-of HDMI2 && polybar-msg cmd restart, mode "default"
    bindsym h exec --no-startup-id xrandr --output HDMI2 --auto --right-of LVDS1 && polybar-msg cmd restart
    bindsym x exec --no-startup-id xrandr --output LVDS1 --auto --off && polybar-msg cmd restart
    bindsym y exec --no-startup-id xrandr --output HDMI2 --auto --off && polybar-msg cmd restart

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Declare here the shortcut to bring the display selection menu
bindsym $mod+p mode "$mode_display"
